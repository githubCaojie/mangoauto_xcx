/* pages/mgLiveSign/mgLiveSign.wxss */
page{
  background-color: #fabf01;
  height: 100vh;
  position: relative;
}
.header{
  padding-top: 50rpx;
}
.header .text1{
  font-size: 85rpx;
  height: 85rpx;
  text-indent: 60rpx;
  line-height: 85rpx;
  font-weight: 800;
  color: #ffffff;
}
.header .text2{
  font-size: 80rpx;
  text-indent: 60rpx;
  font-weight: 400;
  color: #ffffff;
}
.header .text3{
  color: #fabf01;
  font-size: 35rpx;
  font-weight: 600;
  text-indent: 60rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-image: linear-gradient(90deg, #fabf01 -20%, #ffffff, #fabf01 120%);
}
.bottom-view{
  position: absolute;
  width: 100vw;
  bottom: 0;
  left: 0;
}
.sign-view{
  width: 630rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-45%);
}
.form_item {
  background: #fff;
  border-radius: 10rpx;
  height: 97rpx;
  box-sizing: border-box;
  color: #212121;
  font-size: 30rpx;
  line-height: 96rpx;
  position: relative;
  margin-bottom: 25rpx;
}
.form_item input {
  float: left;
  height: 97rpx;
  width: 582rpx;
  padding: 0 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.bottom{
  display: flex;
  justify-content:center;
  color: #fabf01;
  font-size: 30rpx;
  text-align: center;
  background-color: #000000;
  padding: 90rpx 0 40rpx;
  position: relative;
}
.bottom::after{
  content: " ";
  width: 100vw;
  background-color: #fabf01;
  border-radius: 0 0 100% 100%;
  height: 70rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.bottom .bottom-list{
  margin: 0 18rpx;
}
.bottom .bottom-list-title{
  font-size: 40rpx;
  font-weight: 600;
}
.bottom .bottom-list-text{
  border: 1rpx #fabf01 solid;
  padding: 10rpx;
  border-radius: 10rpx;
}
.bottom .bottom-list-text view{
  width: 180rpx;
}
.changePwd{
  background-color: #000000;
  color: #ffffff;
  border-radius: 50rpx;
  font-size: 35rpx;
  font-weight: 600;
  margin-top: 80rpx;
}