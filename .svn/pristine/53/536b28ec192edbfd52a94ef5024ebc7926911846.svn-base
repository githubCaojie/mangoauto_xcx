/* pages/mgLiveSign/mgLiveSign.wxss */
page{
  background-color: #e0f695;
  height: 100vh;
  position: relative;
}
.header-img {
  width: 750rpx;
  height: 766rpx;
}
.bottom-view{
  position: absolute;
  width: 100vw;
  bottom: 0;
  left: 0;
}
.sign-view{
  width: 630rpx;
  margin: 30rpx auto;
}
.form_item {
  background: #fff;
  border-radius: 10rpx;
  height: 97rpx;
  box-sizing: border-box;
  color: #212121;
  font-size: 30rpx;
  line-height: 96rpx;
  position: relative;
  margin-bottom: 25rpx;
}
.form_item input {
  float: left;
  height: 97rpx;
  width: 582rpx;
  padding: 0 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.bottom::after{
  content: " ";
  width: 100vw;
  background-color: #fabf01;
  border-radius: 0 0 100% 100%;
  height: 70rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.changePwd{
  background: linear-gradient(to right, #ffcd7b, #ff994a);
  color: #814517;
  width: 500rpx;
  border-radius: 50rpx;
  font-size: 35rpx;
  font-weight: 900;
  line-height: 100rpx;
  margin-top: 40rpx;
  border: unset;

}