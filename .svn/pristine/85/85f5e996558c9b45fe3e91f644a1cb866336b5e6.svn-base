<!--pages/RemindingPrice/RemindingPrice.wxml-->
<view class="userheader" id="topt">
  <image class="user_photo" src="../../images/RemindingPriceHead.png" mode="aspectFit"></image>
</view>
<view class="divgas">
  <view></view>
</view>
<view class="middle-info">
  <view class="hdonglist">
    <text class="label">看中车型</text>
    <input 
      placeholder="品牌"
      placeholder-class="placeholderColor"
      type="text"
      bindinput="bindCarInput"
      value="{{dataCarName}}"
      bindtap="bindCarHandle"></input>
    <scroll-view
      class="carList-block"
      hidden="{{carBrandList == '' ? true : false}}">
      <view
        class="carli"
        wx:for="{{carBrandList}}"
        data-carCode="{{item.prop_value_id}}"
        data-carName="{{item.value_name}}"
        data-props="{{item.props}}"
        wx:key="prop_value_id"
        bindtap="changeCarInput">{{item.value_name}}</view>
    </scroll-view>
  </view>
  <view class="hdonglist" hidden="{{carSeriesInfo == '' ? true : false}}">
    <text class="label"></text>
    <picker bindchange="seriesPicker" value="{{carSeriesIndex}}" range="{{carSeriesInfo}}" range-key="value_name">
      <view class="picker">{{carSeriesIndex == -1 ? '请选择车系' : carSeriesInfo[carSeriesIndex].value_name}}</view>
    </picker>
  </view>
  <view class="hdonglist" hidden="{{carTypesInfo == '' ? true : false}}">
    <text class="label"></text>
    <picker bindchange="typesPicker" value="{{carTypesIndex}}" range="{{carTypesInfo}}" range-key="value_name">
      <view class="picker">{{carTypesIndex == -1 ? '请选择车型' : carTypesInfo[carTypesIndex].value_name}}</view>
    </picker>
  </view>
  <view class="hdonglist">
    <text class="label">降价幅度</text>
    <view class="body-view">
        <slider block-size="18" bindchange="slider4change" min="1000" max="10000" step="1000" show-value/>
    </view>
  </view>
  <view class="hdonglist">
    <text class="label">短信通知</text>
    <input placeholder="请输入您的手机号码" bindinput="mobileInput" placeholder-class="placeholderColor" value="{{userMobile}}"  type="text"></input>
  </view>
</view>
<view class="comment-btn">
    <button class="baseRedBgColor btn-confirm" bindtap="okSubmit">降价提醒我</button>
</view>