/* pages/mgLiveSign/mgLiveSign.wxss */
page{
  background-color: #e0f695;
  height: 100vh;
  position: relative;
}
.header-img {
  width: 750rpx;
  height: 766rpx;
}
.bottom-view{
  position: absolute;
  width: 100vw;
  bottom: 0;
  left: 0;
}
.sign-view{
  width: 630rpx;
  margin: 30rpx auto;
}
.form_item {
  background: #fff;
  border-radius: 10rpx;
  height: 97rpx;
  box-sizing: border-box;
  color: #212121;
  font-size: 30rpx;
  line-height: 96rpx;
  position: relative;
  margin-bottom: 25rpx;
}
.form_item input {
  float: left;
  height: 97rpx;
  width: 582rpx;
  padding: 0 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.bottom::after{
  content: " ";
  width: 100vw;
  background-color: #fabf01;
  border-radius: 0 0 100% 100%;
  height: 70rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.changePwd{
  background: linear-gradient(to right, #ffcd7b, #ff994a);
  color: #814517;
  width: 500rpx;
  border-radius: 50rpx;
  font-size: 35rpx;
  font-weight: 900;
  line-height: 100rpx;
  margin-top: 40rpx;
  border: unset;
}
.car_list {
  margin-bottom: 50rpx;
}
.car_list .car_item {
  position: relative;
  width: 660rpx;
  height: 240rpx;
  margin: 0 auto 30rpx;
}
.car_list .car_item .item_main {
  width: 100%;
  height: 100%;
  background-color: #fff;
  border-radius: 20rpx;
  position: absolute;
  z-index: 99;
  color: #001d53;
  display: flex;
  flex-wrap: wrap;
  align-content: center;
}
.car_list .car_item .item_main .name {
  width: 480rpx;
  font-size: 34rpx;
  font-weight: 900;
  margin-left: 20rpx;
  line-height: 38rpx;
  position: relative;
  z-index: 99;
}
.car_list .car_item .item_main .price {
  display: flex;
  width: 480rpx;
  font-size: 27rpx;
  margin: 8rpx 0 8rpx 20rpx;
}
.car_list .car_item .item_main .btn_icon {
  color: #fa9848;
  font-size: 27rpx;
  border: 1px solid #fa9848;
  display: inline-block;
  line-height: 50rpx;
  padding: 0 15rpx;
  border-radius: 25rpx;
  margin-left: 20rpx;
}
.car_list .car_item .item_space {
  width: 695rpx;
  height: 214rpx;
  background-color: #fd9849;
  border-radius: 20rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.car_list .car_item .car_img {
  position: absolute;
  width: 282rpx;
  height: 155rpx;
  right: 30rpx;
  bottom: 10rpx;
  border-radius: 25rpx;
}
.car_list .car_item .hot {
  width: 73rpx;
  height: 105rpx;
  position: absolute;
  z-index: 101;
  top: -20rpx;
  right: 20rpx;
}
.text_through {
  text-decoration: line-through;
}
.more_car {
  font-size: 50rpx;
  color: #fff;
  font-weight: 900;
  text-align: center;
  line-height: 100rpx;
  background-image: linear-gradient(#c9e987, #6b9f2f);
  margin-bottom: 58rpx;
}