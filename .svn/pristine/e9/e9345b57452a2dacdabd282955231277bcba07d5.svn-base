<!--pages/mgLiveSign/mgLiveSign.wxml-->
<view class="header">
  <view class="text1">买车用车</view>
  <view class="text2">就来芒果汽车</view>
  <view class="text3">汽车之家&湖南卫视共同投资</view>
</view>
<view class="sign-view">
  <view class="form_item">
    <input type='text' placeholder='姓名' name='name' bindinput="nameInput"></input>
  </view>
  <view class="form_item">
    <input type='text' placeholder='电话' name='phone' bindinput="phoneInput"></input>
  </view>
  <view class="form_item" bindtap="showPopup">
    <input type='text' placeholder='意向车型' name='car' disabled="disabled" value="{{carAllName}}"></input>
  </view>
  <view>
    <button class="changePwd" bindtap="okSubmitBtn">立即询底价</button>
  </view>
</view>
<view class="bottom-view">
  <view class="bottom">
    <view class="bottom-list">
      <view class="bottom-list-title">价优</view>
      <view class="bottom-list-text">
        <view>一口价</view>
        <view>放心贷</view>
      </view>
    </view>
    <view class="bottom-list">
      <view class="bottom-list-title">质优</view>
      <view class="bottom-list-text">
        <view>原厂车源</view>
        <view>验车出门</view>
      </view>
    </view>
    <view class="bottom-list">
      <view class="bottom-list-title">便捷</view>
      <view class="bottom-list-text">
        <view>买车到上牌</view>
        <view>一站式解决</view>
      </view>
    </view>
  </view>
</view>
<selectcartype id="selectcartype" price="{{price}}"  bindnumChange="numChange"></selectcartype>