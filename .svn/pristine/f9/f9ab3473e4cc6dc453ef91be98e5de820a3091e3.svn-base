/* pages/financialTool/financialTool.wxss */
page{
  background-color: #f9f9f9;
}
.header{
  width: 750rpx;
  height: 300rpx;
}
.middleinfo{
  border-left: 24rpx solid #fff;
}
.oh label{
  width: 220rpx;
  display: flex;
}
.oh label .askicon{
  width: 44rpx;
  height: 44rpx;
  margin: 4rpx;
}
.oh{
  display: flex;
  padding: 32rpx 24rpx;
  font-size: 32rpx;
  position: relative;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  margin-top: 0;
  padding-left: 0;
  line-height: 52rpx;
}
.caroh.oh{
  padding: 0 24rpx 0 0;
}
.oh .ohmain text{
  margin-right: 25rpx;
  font-size: 28rpx;
  color: #747474;
  float: right;
}
.downoh::after, .oh::before{
  border: 6px solid transparent;
  border-left: 6px solid #fff;
  width: 0;
  position: absolute;
  top: 50%;
  right: 20rpx;
  height: 0;
  content: ' ';
  transform: translate(0,-50%)
}
.downoh::before{
  border-left-color: #bbb;
  right: 16rpx;
}
.oh .ohmain{
  color: #ff3333;
  width: 506rpx;
}
.oh .ohmain input{
  color: #000;
}
button.btnOkClient{
  width: 450rpx;
  margin: 30rpx auto;
  border: 2rpx solid #28cc43;
  color: #28cc43;
  border-radius: 40rpx;
}
.explain .main{
  width: 600rpx;
  padding: 25rpx 25rpx 40rpx;
  background-color: #fff;
  position: fixed;
  left: 50%;
  top: 5%;
  transform: translate(-50%,0%);
  z-index: 999;
  border-radius: 10rpx;
}
.explain .main .title{
  text-align: center;
  font-size: 38rpx;
  font-weight: 600;
  line-height: 60rpx;
}
.explain .main label{
  font-size: 30rpx;
}
.explain .main .content{
  margin-top: 10rpx;
  text-indent: 56rpx;
}
.radio-group{
  display: flex;
  flex-wrap: wrap;
}
.radio{
  position: relative;
}
.radio radio{
  opacity: 0;
  position: absolute;
  display: none;
}
.radio-icon{
  width: 100%;
  height: 100%;
  border:1rpx solid #999;
  border-radius: 30rpx;
  position: absolute;
  left: 0;
  top: 0;
  color: #999;
  text-align: center;
  line-height: 60rpx;
}
.radio.active .radio-icon{
   border: 1rpx solid #28cc43;
   color: #28cc43;
}
.oh radio-group label{
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #999;
  margin: 14rpx 13rpx 0 0;
}
.oh radio-group label:nth-child(1),.oh radio-group label:nth-child(2),.oh radio-group label:nth-child(3){
  margin: 0 13rpx 0 0;
}
view.carname{
  font-size: 26rpx;
  line-height: 40rpx;
  width: 372rpx;
  position: absolute;
  left: 330rpx;
  top: 50%;
  transform: translate(0,-50%)
}
view.carname view text{
  color: #ff3333;
}
image.carimg{
  width: 316rpx;
  height: 230rpx;
}
.oh .ohmain text.mobilemsg{
  font-size: 22rpx;
  color: #999999;
  float: left;
  margin: 0;
  text-indent: 5rpx;
  line-height: 25rpx;
}
.financialtool{
  padding-bottom: 100rpx;
}